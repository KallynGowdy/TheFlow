@model TheFlow.Api.Entities.User

@{
    ViewBag.Title = "Info";
}

@{bool authenticated = TheFlow.Site.Controllers.ControllerHelper.IsAuthenticated();}

@section NavBarRight
{
    @if (authenticated)
    {
        <li class="divider" />
        <li>
            @Html.ActionLink("Edit", "Edit")
        </li>   
    }
}

<div class="uk-grid">
    <div class="uk-width-medium-1-3 columns large-4">
        <h1 class="uk-text-success">@Model.DisplayName</h1>
    </div>
    <div class="uk-width-medium-1-10 uk-push-6-10 uk-hidden-small">
        @if (authenticated)
        {
            <div style="margin-top: 0.2em;">
                @Html.ActionLink("edit", "Edit", null, new { @class = "uk-button" })
            </div>
        }
    </div>
</div>
<hr />
<div class="uk-grid">
    <div class="uk-width-medium-1-4">
        @{string reputation = string.Format("{0:n0}", Model.Reputation);}

        <div class="uk-hidden-small">
            <h5>@reputation Reputation</h5>
        </div>
        <div class="uk-visible-small uk-text-center">
            <h5>@reputation Reputation</h5>
        </div>
    </div>
    <div class="uk-width-medium-3-4 uk-panel uk-panel-box uk-panel-box-secondary">
        <div class="uk-grid">
            <div class="uk-width-medium-1-1">
                <dl class="uk-panel uk-panel-box uk-description-list uk-description-list-horizontal">
                    <dt>Display Name</dt>
                    <dd>
                        @Model.DisplayName
                    </dd>
                </dl>
                @if (Model.Age.HasValue)
                {
                    <dl class="uk-panel uk-panel-box uk-description-list uk-description-list-horizontal  uk-margin-top">
                        <dt>Age</dt>
                        <dd>
                            @Model.Age.Value
                        </dd>
                    </dl>
                }
                @if (Model.Location != null)
                {
                    <dl class="uk-panel uk-panel-box uk-description-list uk-description-list-horizontal uk-margin-top">
                        <dt>Location</dt>
                        <dd>
                            @Model.Location
                        </dd>
                    </dl>
                }
                <dl class="uk-panel uk-panel-box uk-description-list uk-description-list-horizontal uk-margin-top">
                    <dt>Preferred Code Theme</dt>
                    <dd>
                        @Model.Preferences.CodeStyle.ToString()
                    </dd>
                </dl>
            </div>
        </div>
    </div>

</div>

