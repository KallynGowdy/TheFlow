@model TheFlow.Api.Entities.User

@{
    ViewBag.Title = "Info";
}

@{bool authenticated = TheFlow.Site.Controllers.ControllerHelper.IsAuthenticated();}

@section NavBarRight
{
    @if (authenticated)
    {
        <li class="divider" />
        <li>
            @Html.ActionLink("Edit", "Edit")
        </li>   
    }
}

<div class="row">
    <div class="columns large-4">
        <h2 class="show-for-medium-up">@Model.DisplayName</h2>
        <h1 class="show-for-small text-center">@Model.DisplayName</h1>
    </div>
    <div class="columns large-offset-7 large-1">
        @if (authenticated)
        {
            <div class="show-for-medium-up text-right" style="margin-top: 0.2em;">
                @Html.ActionLink("edit", "Edit", null, new { @class = "button round" })
            </div>
        }
    </div>
</div>
<hr />
<div class="row">
    <div class="columns large-3">
        @{string reputation = string.Format("{0:n0}", Model.Reputation);}

        <div class="show-for-medium-up">
            <h5>@reputation Reputation</h5>
        </div>
        <div class="show-for-small text-center">
            <h5>@reputation Reputation</h5>
        </div>
    </div>
    <div class="columns large-9 panel radius" style="background-color: transparent;">
        <div class="row">
            <div class="columns large-12">
                <p>Display Name: <span style="margin-left: 2em;">@Model.DisplayName</span></p>
                @if (Model.Age.HasValue)
                {
                    <p>Age: <span style="margin-left: 2em;">@Model.Age.Value</span></p>
                }
                @if (Model.Location != null)
                {
                    <p>Location: <span style="margin-left: 2em;">@Model.Location</span></p>
                }
                <p>Preferred Code Theme: @Model.Preferences.CodeStyle.ToString()</p>
            </div>
        </div>
    </div>

</div>

