@{
    ViewBag.Title = "Create";
}
@section head
{
    <link href="@Helpers.GetCodeStylePath()" type="text/css" rel="stylesheet" />
}
@section Scripts
{
    <script src="~/scripts/pagedown/Markdown.Converter.js"></script>
    <script src="~/scripts/pagedown/Markdown.Editor.js"></script>
    <script src="~/scripts/pagedown/Markdown.Sanitizer.js"></script>
    <script src="~/scripts/prettyprint/prettify.js"></script>
    <script src="~/scripts/editor.js"></script>
}
@section OnPageLoadFunction
{
    enableTab("wmd-input");

    enableEditor();
}
<h2>Ask a Question</h2>

<div class="row">
    <div class="columns large-12">
        @using (Html.BeginForm("Create", "Questions", FormMethod.Post, new { data_abide = "" }))
        {
            @Html.AntiForgeryToken()
            <input id="Title" type="text" placeholder="Title" name="Title" autocomplete="off" required />
            <small class="error">Please provide a Title for your question.</small>
            <input type="text" placeholder="Tags" name="Tags" autocomplete="off" title="The tags for your question" />
            <textarea class="wmd-input" id="wmd-input" name="Body" style="max-width: 100%; min-height: 16em;"></textarea>
            <div class="panel radius" style="background-color: white;">
                <h3 id="title-preview"></h3>
                <div id="wmd-preview"></div>
            </div>
            <button type="submit">Ask Question</button>
        }
    </div>
</div>
