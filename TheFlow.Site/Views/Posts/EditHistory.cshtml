@model Tuple<long, TheFlow.Api.Entities.Edit[], System.Collections.Generic.List<DiffMatchPatch.Diff>[]>

@{
    ViewBag.Title = "Edit History";
}

@section Head
{
    <link rel="stylesheet" href="~/Content/font-awesome/font-awesome.css" />
}

@section Scripts
{
    <script>
        loader.completeCallback.push(function () {
            $('#legend-panel').affix({
                offset: {
                    top: 100
                }
            })
        });
    </script>
}

<h2>Edit History</h2>

<div class="row">
    <div class="col-md-3 visible-sm visible-xs">
        <div class="panel panel-default legend-panel">
            <h4>Legend</h4>
            <ul class="list-group">
                <li class="list-group-item"><ins>Inserted Text</ins></li>
                <li class="list-group-item"><del>Deleted Text</del></li>
            </ul>
        </div>
    </div>
    <div class="col-md-9">
        <h3>Original Post</h3>
        <div class="row">
            <div class="col-md-12">
                <pre>@Helpers.DrawDiff(Model.Item3[0])</pre>
            </div>
        </div>
        <hr />

        @for (int i = 1; i < Model.Item3.Length; i++)
        {
            @:<h3>Revision @i</h3>
            <div class="row">
                <div class="col-md-12">
                    <pre>@Helpers.DrawDiff(Model.Item3[i])</pre>
                </div>
            </div>
            <hr />
        }
    </div>
    <div class="col-md-3 hidden-sm">
        <div id="legend-panel" data-spy="affix" class="panel panel-default legend-panel">
            <h4>Legend</h4>
            <ul class="list-group">
                <li class="list-group-item"><ins>Inserted Text</ins></li>
                <li class="list-group-item"><del>Deleted Text</del></li>
            </ul>
        </div>
    </div>
</div>
